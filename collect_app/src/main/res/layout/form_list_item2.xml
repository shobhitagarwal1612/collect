<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Form name"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"

                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="visible"
                tools:text="Form ID"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Added on wednesday"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/editSavedCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/elevation_raised_button_resting"
                        app:cardMaxElevation="@dimen/elevation_raised_button">

                        <TextView
                            android:id="@+id/edit_saved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_chip_drawable_blue"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="15 Saved"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/sendFinalizedCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/elevation_raised_button_resting"
                        app:cardMaxElevation="@dimen/elevation_raised_button">

                        <TextView
                            android:id="@+id/send_finalized"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_chip_drawable_green"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="10 Finalized"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/elevation_raised_button_resting"
                        app:cardMaxElevation="@dimen/elevation_raised_button">

                        <TextView
                            android:id="@+id/view_sent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_chip_drawable_orange"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:cardElevation="10dp"
                            tools:text="10 Sent"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <Button
                    android:id="@+id/fill_form"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/touch_target_size"
                    android:layout_weight="1"
                    android:text="Fill form"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>