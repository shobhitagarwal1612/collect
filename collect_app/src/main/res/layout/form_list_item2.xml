<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:onClick="showPopup"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_more_vert_black_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Form name"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"

                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="visible"
                tools:text="Form ID"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Added on wednesday"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="vertical">

                <Button
                    android:id="@+id/fill_form"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Fill form"/>

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edit_saved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@drawable/shape_chip_drawable_blue"
                        android:textStyle="bold"
                        tools:text="15 Saved"/>

                    <TextView
                        android:id="@+id/send_finalized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@drawable/shape_chip_drawable_green"
                        android:textStyle="bold"
                        tools:text="10 Finalized"/>

                    <TextView
                        android:id="@+id/view_sent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@drawable/shape_chip_drawable_orange"
                        android:textStyle="bold"
                        tools:text="10 Sent"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>