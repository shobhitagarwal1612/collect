<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:padding="@dimen/padding_medium">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Form name" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text1"
                android:padding="@dimen/padding_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="visible"
                tools:text="Form ID" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_saved"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                    android:drawableStart="@drawable/ic_mode_edit_black_24dp"
                    android:text="@string/edit_saved"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_medium"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/send_finalized"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_medium"
                    android:drawableLeft="@drawable/ic_send_black_24dp"
                    android:drawableStart="@drawable/ic_send_black_24dp"
                    android:text="@string/send_finalized"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ll"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Added on wednesday" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>