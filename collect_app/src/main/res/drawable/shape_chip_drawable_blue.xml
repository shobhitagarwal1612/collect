<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/tintColorDark"/>
            <padding
                android:right="12dp"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/tintColor"/>
            <padding
                android:right="12dp"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>